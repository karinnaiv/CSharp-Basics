using System;

namespace demo
{
    class Program
    {
        static void Main(string[] args)
        {
            string fruit = Console.ReadLine();
            string weekday = Console.ReadLine();
            double quantity = double.Parse(Console.ReadLine());

            if (weekday == "Monday" || weekday == "Tuesday" || weekday == "Wednesday" || weekday == "Thursday" || weekday == "Friday")
            {
                if (fruit == "banana")
                {
                    double sum = quantity * 2.50;
                    Console.WriteLine(sum.ToString("F2"));
                }
                else if (fruit == "apple")
                {
                    double sum = quantity * 1.20;
                    Console.WriteLine(sum.ToString("F2"));
                }
                else if (fruit == "orange")
                {
                    double sum = quantity * 0.85;
                    Console.WriteLine(sum.ToString("F2"));
                }
                else if (fruit == "grapefruit")
                {
                    double sum = quantity * 1.45;
                    Console.WriteLine(sum.ToString("F2"));
                }
                else if (fruit == "kiwi")
                {
                    double sum = quantity * 2.70;
                    Console.WriteLine(sum.ToString("F2"));
                }
                else if (fruit == "pineapple")
                {
                    double sum = quantity * 5.50;
                    Console.WriteLine(sum.ToString("F2"));
                }
                else if (fruit == "grapes")
                {
                    double sum = quantity * 3.85;
                    Console.WriteLine(sum.ToString("F2"));
                }
                else
                {
                    Console.WriteLine("error");
                }
            }

            else if (weekday == "Saturday" || weekday == "Sunday")
            {
                if (fruit == "banana")
                {
                    double sum = quantity * 2.70;
                    Console.WriteLine(sum.ToString("F2"));
                }
                else if (fruit == "apple")
                {
                    double sum = quantity * 1.25;
                    Console.WriteLine(sum.ToString("F2"));
                }
                else if (fruit == "orange")
                {
                    double sum = quantity * 0.90;
                    Console.WriteLine(sum.ToString("F2"));
                }
                else if (fruit == "grapefruit")
                {
                    double sum = quantity * 1.60;
                    Console.WriteLine(sum.ToString("F2"));         
                }
                else if (fruit == "kiwi")
                {
                    double sum = quantity * 3.00;
                    Console.WriteLine(sum.ToString("F2"));
                }
                else if (fruit == "pineapple")
                {
                    double sum = quantity * 5.60;
                    Console.WriteLine(sum.ToString("F2"));
                }
                else if (fruit == "grapes")
                {
                    double sum = quantity * 4.20;
                    Console.WriteLine(sum.ToString("F2"));
                }
                else
                {
                    Console.WriteLine("error");
                }
            }

            else
            {
                    Console.WriteLine("error");
            }
        }
    }
}
